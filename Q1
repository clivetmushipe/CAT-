#include <iostream>
using namespace std;

int main()
{
    double area, volume, radius, height;
    cout << "Enter hieght\n";
    cin >> height;
    cout << "Enter radius\n";
    cin >> radius;

    const double pi = 3.141592;

    area = 2*pi*radius*height+2*pi*radius*radius;
    cout << "The area is :" << area << endl;

    volume = pi*radius*radius*height;
    cout << "The volume is :" << volume;

}
